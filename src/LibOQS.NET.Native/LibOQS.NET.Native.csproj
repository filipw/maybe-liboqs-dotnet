<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>LibOQS.NET.Native</PackageId>
    <PackageVersion>0.11.0</PackageVersion>
    <Authors>Open Quantum Safe Project</Authors>
    <Description>Native P/Invoke bindings for liboqs - a C library for quantum-resistant cryptographic algorithms</Description>
    <PackageProjectUrl>https://github.com/open-quantum-safe/liboqs-rust</PackageProjectUrl>
    <RepositoryUrl>https://github.com/open-quantum-safe/liboqs-rust</RepositoryUrl>
    <PackageLicenseExpression>MIT OR Apache-2.0</PackageLicenseExpression>
    <PackageTags>quantum cryptography post-quantum liboqs</PackageTags>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>AnyCPU;x64;ARM64</Platforms>
    <NativeLibraryPath>../native/</NativeLibraryPath>
  </PropertyGroup>

  <ItemGroup>
    <None Condition="$([MSBuild]::IsOsPlatform('Windows'))" Include="$(NativeLibraryPath)oqs.dll" CopyToOutputDirectory="PreserveNewest" />
    <None Condition="$([MSBuild]::IsOsPlatform('Linux'))" Include="$(NativeLibraryPath)liboqs.so" CopyToOutputDirectory="PreserveNewest" />
    <None Condition="$([MSBuild]::IsOsPlatform('OSX'))" Include="$(NativeLibraryPath)liboqs.dylib" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
